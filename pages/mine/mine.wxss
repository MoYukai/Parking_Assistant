}
.row{
  height:max-content;
  width: 85%;
  margin: 0 auto;
}
.row-2{
  padding-left: 20rpx ;
  height:100rpx;
  width: 100%;
  margin: 0 auto;
}
.col{
  padding:15rpx ;
  width: 170rpx;
  margin-top: 45rpx; 
}
.col>image{
