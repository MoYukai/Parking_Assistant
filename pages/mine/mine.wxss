}
button{
  background-color: #fff;
}
button::after{
  border: none;
}
.bg-top{
  width: 100%;
  height: 150rpx;
  background-image: linear-gradient(180deg, #F2AC3C 0%, #EC6E2F 100%);
  position: relative;
  padding-top: 0rpx;
}
.bg-top2{
  width: 100%;
  height: auto;
}
.tab{
  height:max-content;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  padding-bottom: 50rpx;
  margin-top: 35rpx;
}
.tab-t{
  height:max-content;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
