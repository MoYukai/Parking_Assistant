page{
  background-color: #F0F0F0;
}

.bg-top{
  width: 100%;
  height: 190rpx;
  background-image: linear-gradient(180deg, #F2AC3C 0%, #EC6E2F 100%);
  position: relative;
  padding-top: 50rpx;
}
.bg-top2{
  width: 100%;
  height: auto;
}
.tab{
  height:799rpx;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
  margin-bottom: 50rpx;
}
.row{
  width: 80%;
  margin: auto;
}
.row2{
  width: 80%;
  margin: auto;
  margin-top: 50rpx;
}
.img{
  width: 400rpx;
  height: auto;
}
.title{
  margin-top: 40rpx;
  color: #414141;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.row-text{
  margin-top: 20rpx;
