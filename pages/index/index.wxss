page{
  background-color: #F0F0F0;
}
.bg-top{
  width: 100%;
  height: 190rpx;
  background-image: linear-gradient(180deg, #F2AC3C 0%, #EC6E2F 100%);
  position: relative;
  padding-top: 50rpx;
}
.bg-top2{
  width: 100%;
  height: auto;
}
.tab{
  height:max-content;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  padding-bottom: 30rpx;
}
.tab-2{
  height:max-content;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  padding-top: 30rpx;
  padding-bottom: 70rpx;
  margin-top: 50rpx;
}
.row{
  height:max-content;
  width: 85%;
  margin: 0 auto;
}
.row-2{
  height:max-content;
  width: 80%;
  margin: 0 auto;
  margin-top: 50rpx;
}
.col{
  width: 170rpx;
  margin-top: 60rpx; 
}
.col>image{
  width:65rpx;
  height: auto;
}
.text{
  color:#9D9D9D ;
  margin-top: 5rpx;
  text-align: center;
  font-size: 22rpx;
}
.title{
  color: #2A2A2A;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.btn{
  background-color: #EA5419;
  color: white;
  font-weight: normal;
  width: 100% !important;
  font-size: 35rpx;
  height: 90rpx;
  padding: 0;
  line-height: 90rpx;
}
.btn-hover{
  opacity:0.7 !important;
}
.first-btn{
  margin-top: 40rpx;
}
.tip{
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #9D9D9D;
  text-align: center;
}
.tip>image{
  width:25rpx;
  height: auto;
  margin-right: 13rpx;
}
.tab-2-title{
  position: relative;
  margin-left: 30rpx;
  color: #464646;
  font-size: 30rpx;
}
.tab-2-title::before{
  content: "";
  position: absolute;
  top: 4rpx;
  left: -20rpx;
  background-color: #EA5419;
  height: 35rpx;
  width: 7rpx;
}
.tab-2-text{
  margin-left: 10rpx;
  margin-top: 6rpx;
  width: 92%;
  color: #7B7B7B;
  font-size: 22rpx;
}
.tab-2-alpha{
  color: #666666;
  font-size: 28rpx;
}