@import "../../layout/flex.wxss";
.bg-top{
  width: 100%;
  height: 190rpx;
  background-image: linear-gradient(180deg, #F2AC3C 0%, #EC6E2F 100%);
  position: relative;
  padding-top: 50rpx;
}
.bg-top2{
  width: 100%;
  height: auto;
}
.tab{
  height:280rpx;
  width: 85%;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  padding-top:40rpx ;
  margin-bottom:40rpx ;
}
.row{
  width: 80%;
  height: max-content;
  margin: auto;
}
.img{
  border-radius: 15rpx;
  width: 170rpx;
  height:auto;
  box-shadow: 0px 2px 11px #0000003b;
  margin-right: 40rpx;
}
.title{
  color: #313131;
  margin-top: 10rpx;
}
.btn{
  background-color: #EC602A;
  width: 160rpx;
  height: 60rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 25rpx;
}
.btn-hover{
  opacity:0.7 !important;
}